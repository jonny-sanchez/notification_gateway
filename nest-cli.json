{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "generateOptions": {
    "spec": false
  },
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "mail/templates/**/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "../client/**/*",
        "outDir": "dist/client"
      }
    ]
  }
}
